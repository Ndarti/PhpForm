{% extends 'base.html.twig' %}
{% block title %}Результаты поиска для "{{ query }}"{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>Результаты поиска для "{{ query }}"</h1>
        {% if templates is not empty %}
            <div class="row">
                {% for template in templates %}
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ template.name|default('Без названия') }}</h5>
                                <p class="card-text">
                                    Автор: {{ template.author ? template.author.email|default('Аноним') : 'Аноним' }}<br>
                                    Создан: {{ template.createdAt|date('d.m.Y')|default('Не указано') }}
                                </p>
                                <a href="{{ path('survey_template_show', {'id': template.id}) }}" class="btn btn-outline-primary">Просмотреть</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-muted">Шаблоны не найдены.</p>
        {% endif %}
    </div>
{% endblock %}